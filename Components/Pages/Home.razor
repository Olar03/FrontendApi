<PageTitle>Dashboard - Sistema de Gestión</PageTitle>

@code {
    private bool usuarioLogueado = false;
    private string nombreUsuario = "Invitado";
    private bool esAdmin = false;
    private bool esTecnico = false;
    private bool esUsuarioRegular = false;
    private string tipoUsuario = "User";

    protected override async Task OnInitializedAsync() // Verificar estado de autenticación al inicializar
    {
        usuarioLogueado = await AuthService.EstáAutenticado();

        if (usuarioLogueado) // Si el usuario está autenticado
        {
            nombreUsuario = await AuthService.ObtenerUsuarioActual();
            tipoUsuario = await AuthService.ObtenerTipoUsuario();
            esAdmin = await AuthService.EsAdministrador();
            esTecnico = await AuthService.EsTecnico();
            esUsuarioRegular = await AuthService.EsUsuarioRegular();
        }

        StateHasChanged(); // Forzar la actualización de la interfaz
    }

    private void IrALogin() // Navegar a la página de login
    {
        NavigationManager.NavigateTo("/login");
    }

    private void NavegarA(string ruta) // Navegar a una ruta específica
    {
        NavigationManager.NavigateTo(ruta);
    }

    public void Dispose() // Implementación de IDisposable
    {
        // Limpiar recursos si es necesario
    }
}



